<script>
var dataTable = null;
  
function dataT(){          
	dataTable = jQuery('#search_results').DataTable( {} );
}

function findPatients(e) {
 var search_string = e.value;

 jQuery.ajax({
    type: "GET",
    url: "/get_patients/" + search_string,
    success: function(result){
      dataTable.clear(); //fnClearTable();
      addRows(result);                                                           
    }
  });
}

</script>


