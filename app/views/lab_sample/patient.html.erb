</tr>                                                                         
</thead>                               
<tbody>
</tbody>                                       
</table>


<script>                                                                        
  dataT();                   

function addRows(data) {
  var patients = JSON.parse(data);
  
  for (var i = 0; i < patients.length; i++) {
    first_name            = patients[i]['given_name'];
    middle_name           = patients[i]['middle_name'];
    last_name             = patients[i]['family_name'];
    gender                = patients[i]["gender"];
    birthdate             = patients[i]["birthdate"];
    birthdate_estimated   = patients[i]["birthdate_estimated"];
    identifier            = patients[i]["identifier"];
    date_created          = patients[i]["date_created"];

    dataTable.row.add([identifier, first_name, middle_name, last_name, gender, birthdate, birthdate_estimated, date_created, addBTN(identifier)]).draw();
  }
}

function addBTN(identifier) {
  var s = document.createElement('span');
  var btn = document.createElement('button');
  btn.setAttribute('class','btn btn-primary');
  btn.innerHTML = 'Create lab sample';
  btn.setAttribute('onclick',"javascript:createLabSample('" + identifier + "')");
  s.appendChild(btn);
  return s.innerHTML;
}

function createLabSample(identifier) {
  document.location = "/create_sample/" + identifier;
}

</script>  
